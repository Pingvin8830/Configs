#-------------------------------------------------------------------------------------------------------------------------------------------------------------
l () {
  clear
  pwd
  ls -laFh --color $1 | more
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
m () {
	/usr/bin/sudo mkdir /mnt/$1
	/usr/bin/sudo mount /dev/sd$1 /mnt/$1
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
u () {
	/usr/bin/sudo umount /dev/sd$1
	/usr/bin/sudo rmdir /mnt/$1
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
ua () {
	/usr/bin/sudo umount /mnt/*
	/usr/bin/sudo rmdir /mnt/*
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
bkp () {
  scp $1 HomeServer:/backups/$2
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
gu () {
  NOW=$(pwd)
  cd /git
  for r in $(ls -1); do
    echo $r
    cd $r
    git checkout master
    git pull
    cd ..
    echo
    done
  cd $NOW
  pwd
}
