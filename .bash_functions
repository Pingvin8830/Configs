#-------------------------------------------------------------------------------------------------------------------------------------------------------------
makebin () {
	source="$1"
	result=$(echo "${source}" | sed "s/\.cpp$//;s/\.c$//")
	if [ -z "$2" ]
		then
			result="/data/shells/cpp/bin/${result}.bin"
		else
			result="/data/shells/cpp/bin/$2/${result}.bin"
	fi
	gcc ${source} -o ${result}
	[ $? -eq 0 ] && echo -e "Создан бинарный файл \033[33m${result}\033[0m"
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
l () {
  clear
  pwd
  ls -laFh $1 | more
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
m () {
	/usr/bin/sudo mkdir /mnt/$1
	/usr/bin/sudo mount /dev/sd$1 /mnt/$1
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
u () {
	/usr/bin/sudo umount /dev/sd$1
	/usr/bin/sudo rmdir /mnt/$1
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
ua () {
	/usr/bin/sudo umount /mnt/*
	/usr/bin/sudo rmdir /mnt/*
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------
