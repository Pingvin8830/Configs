xset s off -dpms &
guake &
numlockx &
setxkbmap -layout "us,ru" -option "grp:ctrl_shift_toggle,grp_led:scroll" &
feh --bg-scale --recursive --randomize /data/graph/backgrounds &
tint2 &
volumeicon &
